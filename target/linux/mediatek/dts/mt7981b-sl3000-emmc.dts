/dts-v1/;

#include "mt7981.dtsi"

/ {
    model = "SL3000 eMMC Flagship Router";
    compatible = "sl,sl3000-emmc", "mediatek,mt7981";

    aliases {
        serial0 = &uart0;
        ethernet0 = &gmac0;
    };

    chosen {
        stdout-path = "serial0:115200n8";
        bootargs = "console=ttyS0,115200n8";
    };

    memory@40000000 {
        device_type = "memory";
        reg = <0x40000000 0x20000000>;
    };
};

&uart0 { status = "okay"; };
&watchdog { status = "okay"; };

&gmac0 {
    status = "okay";
    phy-mode = "rgmii";
};

&mmc0 {
    status = "okay";

    partition@0 {
        label = "u-boot";
        reg = <0x00000000 0x00200000>;
        read-only;
    };

    partition@200000 {
        label = "u-boot-env";
        reg = <0x00200000 0x00100000>;
    };

    partition@300000 {
        label = "factory";
        reg = <0x00300000 0x00100000>;
    };

    partition@400000 {
        label = "firmware";
        reg = <0x00400000 0x1FC00000>;
    };
};
