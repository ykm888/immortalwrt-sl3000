# =========================================================
# 核心架构锁定 (防止误跳 x86 的关键)
# =========================================================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000-emmc=y

# =========================================================
# 分区对齐锁定 (必须与 MK 文件的 64MB/1024MB 字节数对应)
# =========================================================
CONFIG_TARGET_KERNEL_PARTSIZE=64
CONFIG_TARGET_ROOTFS_PARTSIZE=1024

# =========================================================
# 内存优化配置 (1GB RAM 专用)
# =========================================================
CONFIG_KERNEL_SKB_FIXED_SIZE_2K=y
CONFIG_KERNEL_NR_CPUS=4
# 提高内存利用率
CONFIG_PACKAGE_zram-swap=y
CONFIG_ZRAM_SETTINGS_ZRAM0_SIZE=256

# =========================================================
# eMMC 核心驱动与文件系统 (必备)
# =========================================================
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-sdhci-mtk=y
CONFIG_PACKAGE_kmod-fs-f2fs=y
CONFIG_PACKAGE_f2fs-tools=y
CONFIG_PACKAGE_f2fsck=y
CONFIG_PACKAGE_block-mount=y

# =========================================================
# 基础硬件驱动 (网口、USB)
# =========================================================
CONFIG_PACKAGE_kmod-mt753x=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-dwc3-mtk=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y

# =========================================================
# 基础管理界面 (LuCI)
# =========================================================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# =========================================================
# 自动生成的补齐项 (防止编译中断)
# =========================================================
CONFIG_LIBCURL_COOKIES=y
CONFIG_LIBCURL_FILE=y
CONFIG_LIBCURL_FTP=y
CONFIG_LIBCURL_HTTP=y
CONFIG_LIBCURL_NO_SMB_GPL=y
CONFIG_LIBCURL_PROXY=y
