############################################
# Target / Device
############################################
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
# CONFIG_TARGET_MULTI_PROFILE is not set

CONFIG_TARGET_DEVICE_mediatek_filogic_DEVICE_sl_3000-emmc=y
CONFIG_TARGET_DEVICE_PACKAGES_mediatek_filogic_DEVICE_sl_3000-emmc=""

############################################
# RootFS / Image
############################################
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y

############################################
# Build system (关闭开发期开关，避免触发额外检查)
############################################
# CONFIG_DEVEL is not set
# CONFIG_TOOLCHAINOPTS is not set
# CONFIG_BUSYBOX_CUSTOM is not set
# CONFIG_TARGET_PER_DEVICE_ROOTFS is not set

############################################
# Metadata / Overview
############################################
CONFIG_INCLUDE_CONFIG=y
CONFIG_JSON_OVERVIEW_IMAGE_INFO=y

############################################
# Drivers (SL3000 必需)
############################################
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y
CONFIG_PACKAGE_kmod-mmc=y

############################################
# LuCI 基础
############################################
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

############################################
# Passwall2 主程序
############################################
CONFIG_PACKAGE_luci-app-passwall2=y

############################################
# Passwall2 必需依赖（最小集合）
############################################
CONFIG_PACKAGE_passwall2-core=y
CONFIG_PACKAGE_passwall2-proxy=y
CONFIG_PACKAGE_passwall2-services=y

# Xray（主代理内核）
CONFIG_PACKAGE_xray-core=y

# Shadowsocks（必要）
CONFIG_PACKAGE_shadowsocks-libev-ss-local=y
CONFIG_PACKAGE_shadowsocks-libev-ss-redir=y
CONFIG_PACKAGE_shadowsocks-libev-ss-server=y

# DNS 相关（Passwall2 必需）
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_dns2socks=y
CONFIG_PACKAGE_dns2tcp=y
CONFIG_PACKAGE_https-dns-proxy=y

############################################
# 网络基础（路由器必需）
############################################
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_ipv6helper=y
