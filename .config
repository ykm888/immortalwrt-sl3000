CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000-emmc=y

# CPU / SoC
CONFIG_SOC_MT7981=y

# eMMC
CONFIG_MMC=y
CONFIG_MMC_MTK=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_SDHCI=y
CONFIG_MMC_SDHCI_PLTFM=y

# WiFi
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y

# Ethernet / Switch
CONFIG_PACKAGE_kmod-mt7530=y
CONFIG_PACKAGE_kmod-dsa=y
CONFIG_PACKAGE_kmod-dsa-mt7530=y
CONFIG_PACKAGE_kmod-mtk-hnat=y
CONFIG_PACKAGE_kmod-mt7981-wed=y

# GPIO / LED / Button
CONFIG_PACKAGE_kmod-leds-gpio=y
CONFIG_PACKAGE_kmod-button-hotplug=y

# NVMEM / EFUSE
CONFIG_PACKAGE_kmod-nvmem=y
CONFIG_PACKAGE_kmod-nvmem-mtk-efuse=y

# Thermal / HWMON
CONFIG_PACKAGE_kmod-hwmon-core=y
CONFIG_PACKAGE_kmod-hwmon-mtk=y

# Filesystems
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-btrfs=y
CONFIG_PACKAGE_kmod-fs-f2fs=y
CONFIG_PACKAGE_kmod-dm=y

# Block / Storage
CONFIG_PACKAGE_blockd=y
CONFIG_PACKAGE_fstrim=y
CONFIG_PACKAGE_fitblk=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_uboot-envtools=y

# Debug / Tools
CONFIG_PACKAGE_irqbalance=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_tcpdump-mini=y
CONFIG_PACKAGE_htop=y

# LuCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Remove USB (SL3000 无 USB 控制器)
CONFIG_PACKAGE_kmod-usb3=n
CONFIG_PACKAGE_kmod-usb2=n
CONFIG_PACKAGE_kmod-usb-storage=n
CONFIG_PACKAGE_kmod-usb-storage-uas=n
CONFIG_PACKAGE_kmod-usb-ledtrig-usbport=n

# Rootfs / Kernel
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_SQUASHFS_BLOCK_SIZE=256
CONFIG_KERNEL_LZMA=y
CONFIG_TARGET_INITRAMFS_COMPRESSION_LZMA=y
